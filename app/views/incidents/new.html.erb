<style>
	.input {
		margin: 5px;
	}
</style>

<div class="container">
<h5>Create a new Incident here</h5>
	<div class="row">
		<div class="col-sm-6">
			
			<%= simple_form_for @incident, url: incidents_path, method: :post do |f| %>
				<%= f.input :title, label: 'Title', input_html: { class: 'form-control form-control-sm input' } %>
				<%= f.input :description, label: 'Description', input_html: { class: 'form-control form-control-sm input' } %>
					<select name="severity" class="form-select form-control form-control-sm input">
					  <option selected>Nothing Selected</option>
					  <option value="sev0">Sev0</option>
					  <option value="sev1">Sev1</option>
					  <option value="sev2">Sev2</option>
					</select>		
				<%= f.button :submit, :value => "Create", class: 'btn btn-primary btn-sm input' %>						
			<% end %>
		</div>
	</div>	
</div>
