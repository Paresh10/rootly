<div class="container">
    <h1>All The Incidents</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Severity</th>
                <th>Created At</th>
            </tr>
        </thead>    
        <tbody>
        <% @incidents.each do |i| %>
            <tr>
                
                    <td><%= i.title %></td>
                    <td><%= i.description %></td>
                    <td><%= i.severity %></td>
                    <td><%= i.created_at.strftime("%Y %M %D") %></td>
                
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
